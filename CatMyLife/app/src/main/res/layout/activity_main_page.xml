<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.catmylife.android.catmylife.MainPage"
    android:animateLayoutChanges="true"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/catImageView" />

    <Chronometer android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chrono"
        android:visibility="gone"/>

    <TextView
        android:text="Collect coints by walking!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#FFD2DFD8" />

    <TextView
        android:text="Walk 10000 steps per day to keep you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textColor="#FFD2DFD8" />

    <TextView
        android:text="to keep you and your kitty healthy!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="7dp"
        android:textColor="#FFD2DFD8"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/normal_cat_animation"
        android:id="@+id/catImageView"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:minHeight="50dp"
        android:minWidth="300dp"
        android:progress="0"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="baby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="#FFD2DFD8"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:onClick="buyFood"

        android:layout_marginLeft="30dp"
        android:textColor="#FFDDF0E9"
        android:background="#FF69C4A4"
        android:minHeight="0dp"
        android:minWidth="65dp"
        android:padding="9dp"
        android:textSize="16sp"
        android:layout_below="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar" />

    <Button
        android:text="Study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="study"
        android:layout_marginLeft="6dp"
        android:textColor="#FFDDF0E9"
        android:background="#FF69C4A4"
        android:minHeight="0dp"
        android:minWidth="65dp"
        android:padding="9dp"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/catImageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:onClick="sleep"
        android:textColor="#FFDDF0E9"
        android:background="#FF69C4A4"
        android:minHeight="0dp"
        android:minWidth="65dp"
        android:padding="9dp"
        android:textSize="16sp"
        android:layout_below="@+id/progressBar"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coinTextView"
        android:textColor="#FFD2DFD8"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginBottom="12dp" />

</RelativeLayout>
